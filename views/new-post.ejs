<div class="container ">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow">
        <div class="card-body"> 
          <h2 class="card-title text-center mb-4">Crear nueva publicación</h2>

          <form id="newPostForm">
            <div class="mb-1">
              <label for="title" class="form-label">Título</label>
              <input type="text" class="form-control" name="title" id="title" placeholder="Ingresa el título" required>
            </div>

            <div class="mb-1">
              <label for="content" class="form-label">Contenido</label>
              <textarea class="form-control" name="content" id="content" rows="2" placeholder="Escribe tu publicación aquí" required></textarea>
            </div>

            <div class="mb-1">
              <label for="categorySelect" class="form-label">Categoría</label>
              <select class="form-select" name="category" id="categorySelect" required>
                <!-- Opciones serán agregadas por JS -->
              </select>
            </div>

            <div class="d-grid " style="margin-top: 50px;">
              <button type="submit" class="btn btn-primary">Publicar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/post.js"></script>
